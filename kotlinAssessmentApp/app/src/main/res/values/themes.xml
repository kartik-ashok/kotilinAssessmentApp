<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.KotlinAssessmentApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>\
        <item name="colorOnPrimary">@color/yellow</item>\
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>\
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="windowSplashScreenBackground">@color/yellow</item>

        <!-- Logo icon (should be a vector drawable for animation) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/zomato_logo_transparent_background</item>

        <!-- Optional: Control icon animation duration (default is 1000ms) -->
        <item name="windowSplashScreenAnimationDuration">700</item>

<!--        &lt;!&ndash; Optional: Center logo vertically or align to bottom &ndash;&gt;-->
<!--        <item name="windowSplashScreenIconCenter">true</item>-->

<!--        &lt;!&ndash; Add branding image below the icon (useful for taglines or secondary logo) &ndash;&gt;-->
<!--        <item name="windowSplashScreenBrandingImage">@drawable/splash_branding</item>-->

        <!-- Post-splash app theme -->
        <item name="postSplashScreenTheme">@style/Theme.KotlinAssessmentApp</item>
    </style>

</resources>