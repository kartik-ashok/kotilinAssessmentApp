    <!-- 
    Theme for Compose app following enterprise patterns
    Uses Material Components for proper theme inheritance
    This is REQUIRED even for pure Compose apps for Activity theming
    -->
    <style name="Theme.KotlinAssessmentApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color for Android system UI -->
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/secondaryColor</item>
        <item name="android:colorAccent">@color/yellow</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Enable edge-to-edge display -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

